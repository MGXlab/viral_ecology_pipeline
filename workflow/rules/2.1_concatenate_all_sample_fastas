samples_df = samplesheet_to_df(config['samplesheet'])
SAMPLES = samples_df['sample_id'].values.tolist()

rule concatenate_files:
    input:
        scaffolds_length_filtered = expand("results/{sample}/penguin/{sample}.scaffolds_gt" + LENGTH + ".fasta", sample=SAMPLES)
    output:
        "combined_results/scaffolds/penguin_gt2480.scaffolds.fasta"
    shell:
        """
        cat {input.scaffolds_length_filtered} > {output}
        """
