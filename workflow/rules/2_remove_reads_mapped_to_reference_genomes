rule bwa_mem:
    input:
        reads=["results/{sample}/fastp/{sample}_1.clean_paired.fastq.gz", "results/{sample}/fastp/{sample}_2.clean_paired.fastq.gz"],
        idx=multiext("data/eukaryotic_reference_genomes/eukaryotic_reference_genomes.fna", ".amb", ".ann", ".bwt", ".pac", ".sa"),
    output:
        "results/{sample}/bwa_mem_eukaryotic_reference_genomes/{sample}.coordinate_sorted.bam",
    log:
        "logs/{sample}/bwa_mem_eukaryotic_reference_genomes/{sample}_bwa_mem.log",
    params:
        extra=r"-R '@RG\tID:{sample}\tSM:{sample}'",
        sorting="samtools",  # Can be 'none', 'samtools' or 'picard'.
        sort_order="coordinate",  # Can be 'queryname' or 'coordinate'.
        sort_extra="",  # Extra args for samtools/picard.
    threads: 
        config["BWA"]["threads"]
    wrapper:
        "v3.7.0/bio/bwa/mem"

rule samtools_collate_fastq:
    input:
        "results/{sample}/bwa_mem_eukaryotic_reference_genomes/{sample}.coordinate_sorted.bam",
    output:
        filtered_paired_1 = "results/{sample}/bwa_mem_eukaryotic_reference_genomes/{sample}_filtered_paired_reads_1.fastq",
        filtered_paired_2 = "results/{sample}/bwa_mem_eukaryotic_reference_genomes/{sample}_filtered_paired_reads_2.fastq",
    log:
        "logs/{sample}/bwa_mem_eukaryotic_reference_genomes/{sample}_samtools_collate_fastq.log",
    params:
    threads: 
        config["SAMTOOLS"]["threads"]
    conda:
        "../envs/samtools.yaml"
    shell:
        "samtools -u -O {input} | "
        "samtools fastq -1 {output.filtered_paired_1} -2 {output.filtered_paired_2} -0 /dev/null -s /dev/null -n"
